{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": [
      "DOM",
      "ES6",
      "ES2016.Array.Include"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "atom": {
    "rewriteTsconfig": true,
    "formatOnSave": true
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  }
}
